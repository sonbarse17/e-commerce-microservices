# E-Commerce Microservices Environment Configuration

# Spring Profile - DO NOT CHANGE (required for Docker)
SPRING_PROFILES_ACTIVE=docker

# Database Configuration - CHANGE THESE FOR SECURITY
DB_HOST=mysql                    # Keep as 'mysql' for Docker
DB_PORT=3306                     # Standard MySQL port
DB_USERNAME=root                 # CHANGE: Use different username for production
DB_PASSWORD=password             # CHANGE: Use strong password for production

# Individual Database Names - CHANGE IF NEEDED
DB_NAME_USERS=ecommerce_users
DB_NAME_PRODUCTS=ecommerce_products
DB_NAME_INVENTORY=ecommerce_inventory
DB_NAME_ORDERS=ecommerce_orders
DB_NAME_PAYMENTS=ecommerce_payments
DB_NAME_CART=ecommerce_cart
DB_NAME_NOTIFICATIONS=ecommerce_notifications
DB_NAME_REVIEWS=ecommerce_reviews
DB_NAME_ANALYTICS=ecommerce_analytics

# MySQL Root Configuration - CHANGE FOR SECURITY
MYSQL_ROOT_PASSWORD=password     # CHANGE: Use strong password for production
MYSQL_DATABASE=ecommerce         # Main database name

# Service Ports - CHANGE IF PORTS ARE OCCUPIED
API_GATEWAY_PORT=8080            # Main entry point
USER_SERVICE_PORT=8081
PRODUCT_SERVICE_PORT=8082
INVENTORY_SERVICE_PORT=8083
ORDER_SERVICE_PORT=8084
PAYMENT_SERVICE_PORT=8085
CART_SERVICE_PORT=8086
NOTIFICATION_SERVICE_PORT=8087
REVIEW_SERVICE_PORT=8088
ANALYTICS_SERVICE_PORT=8089

# Redis Configuration - CHANGE IF NEEDED
REDIS_HOST=redis                 # Keep as 'redis' for Docker
REDIS_PORT=6379                  # Standard Redis port

# Frontend Configuration - CHANGE BASED ON YOUR SETUP
FRONTEND_PORT=4200               # Angular development port
API_BASE_URL=http://localhost:8080/api  # CHANGE: Use your domain for production

# JWT Configuration - CHANGE FOR SECURITY
JWT_SECRET=your-jwt-secret-key-here     # CHANGE: Use long random string (min 32 chars)
JWT_EXPIRATION=86400000          # Token expiry in milliseconds (24 hours)

# CORS Configuration - CHANGE FOR PRODUCTION
ALLOWED_ORIGINS=http://localhost:4200   # CHANGE: Add your production domain

# MySQL Database Port - CHANGE IF PORT IS OCCUPIED
MYSQL_PORT=3306                  # External MySQL port

# Docker Network - CHANGE IF NEEDED
DOCKER_NETWORK=ecommerce-network